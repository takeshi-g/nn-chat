doctype html 
html(lang="ja")
  head 
    meta(charset="UTF-8")
    title NN CHAT
  body 
    h1 NN CHAT 
    a(href="/logout") ログアウト
    form(method="POST" action="/posts")
      div 
        textarea(name="content" coos=40 rows=4)
      div 
        button(type="submit") 送信
    h2 投稿一覧
    each post in posts 
      p 投稿者: #{post.postedBy}
      p 送信日時: #{post.createdAt} 
      p!=post.content
      - let isDeletable = (user === post.postedBy || user === 'admin')
      if isDeletable 
        form(method="post" action="/posts/delete")
          input(type="hidden", name="id" value=post.id)
          button(type="submit") 削除
      hr