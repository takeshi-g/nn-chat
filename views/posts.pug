doctype html 
html(lang="ja")
  head 
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    title NN CHAT
  body.container 
    .my-3
      a.btn.btn-info.float-right(href="/logout") ログアウト
      h1 NN チャット
    form(method="POST" action="/posts")
      div.form-group
        textarea(name="content" coos=40 rows=4).form-control
      div.form-group
        button(type="submit").btn.btn-primary 送信

    each post in posts 
      - let cardClass = (user === post.postedBy ? 'card my-3 bg-primary text-white' : 'card my-3')
      div(class=`${cardClass}`) 
        - let isDeletable = (user === post.postedBy || user === 'admin')
        if isDeletable 
          .card-header
            form(method="post" action="/posts/delete")
              input(type="hidden", name="id" value=post.id)
              button(type="submit").btn.btn-danger.float-right 削除
        .card-body 
          b 投稿者: #{post.postedBy}
          small.float-right #{post.formattedCreatedAt}
          p!=post.content

      hr
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")